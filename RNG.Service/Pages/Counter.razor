@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: <FluentBadge Appearance="Appearance.Accent">@_currentCount</FluentBadge></p>

<SfButton @onclick="IncrementCount">Click me</SfButton>

@code {
  private int _currentCount;

  private void IncrementCount()
  {
    _currentCount++;
  }

}
